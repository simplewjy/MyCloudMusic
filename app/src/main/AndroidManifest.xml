<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simple.mycloudmusic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/icon_cloud_music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_cloud_music"
        android:supportsRtl="true"
        android:theme="@style/MyNoActionBarTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".module.home.activity.HomeActivity"></activity>
        <activity
            android:name=".module.splash.SplashActivity"
            android:theme="@style/FullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="640" /> <!-- 全屏设置，必须加入 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
    </application>

</manifest>